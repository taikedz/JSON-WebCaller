{
	"api":"json",
	"key":"mykey",

	"actions":{
		"list":{
			"url":"https://api.digitalocean.com/v2/droplets",
			"method":"GET",
			"output":{
				"section":"body",
				"filter":"json",
				"patterns":[".droplets.name"]
			}
		},
		"rate":{
			"url":"https://api.digitalocean.com/v2/droplets",
			"method":"HEAD",
			"output":{
				"section":"header",
				"filter":"grep",
				"pattern":"ratelimit"
			}
		},
		"distros":{
			"url":"https://api.digitalocean.com/v2/images?type=distribution&per_page=100",
			"method":"GET"
		},
		"create":{
			"url":"https://api.digitalocean.com/v2/droplets",
			"method":"POST",
			"requires":["region", "size", "image", "name"],
			"requestdata":{
				"region":"lon1",
				"size":"512mb",
				"image":"22222654"
			}
		},
		"snapshot":{
			"url":"https://api.digitalocean.com/v2/droplets/$id/actions",
			"method":"POST",
			"requires":["name"],
			"requestdata":{
				"type":"snapshot"
			}
		},
		"restore":{
			"url":"https://api.digitalocean.com/v2/droplets/$id/actions",
			"method":"POST",
			"requires":["image"],
			"requestdata":{
				"type":"restore"
			}
		},
		"create-big":{
			"url":"https://api.digitalocean.com/v2/droplets",
			"method":"POST",
			"requires":["region", "size", "image", "name"],
			"requestdata":{
				"region":"lon1",
				"size":"2gb",
				"image":"22222654"
			}
		},
		"destroy":{
			"url":"https://api.digitalocean.com/v2/droplets/$id",
			"method":"DELETE",
			"requires":["id"],
			"requestdata":{
			}
		}
	}
}
